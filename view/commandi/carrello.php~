	<script>
		function MostraMessaggioAcquisto(){
     	// Effettuo la chiamata Ajax
     	$.ajax({type: "GET",dataType: "html",url: "index.php?page=utente&com=carrello",,
			success: 
				$("button").click(function(){
					window.alert("Hai effettuato l'acquisto , ora il carrello verrà svuotato");   
				}
          	}
          	error: window.alert("l'acquisto è andato male");   
          }
     	});
		}
		</script>
	</head>
